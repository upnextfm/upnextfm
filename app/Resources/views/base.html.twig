<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>
            {% block title %}{% endblock %}{% if block('title') %} - {% endif %}UpNext
        </title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% block stylesheets %}
            <link href="{{ asset('build/css/loader.css') }}" rel="stylesheet" />
            <link href="//fonts.googleapis.com/css?family=Roboto:300,400,500" rel="stylesheet">
            <link href="//fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
            {% if materialize|default  %}
                <link href="{{ asset('build/css/materialize.css') }}" rel="stylesheet" />
            {% endif %}
            <link href="{{ asset('build/css/app.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
        {% if hide_navbar is not defined  %}
            {% include ":_layout:nav.html.twig" %}
        {% endif %}
        {% block body %}{% endblock %}
        {% if hide_navbar is not defined  %}
            {% include ":_layout:footer.html.twig" %}
        {% endif %}
        {% include ":_modals:play.html.twig" %}
        {% block javascripts %}
            <script>
                var _WS_URI = '{{ ws_uri }}';
            </script>
            <script type="text/javascript" src="//code.jquery.com/jquery-3.2.1.min.js"></script>
            {% if materialize|default  %}
                <script src="//cdnjs.cloudflare.com/ajax/libs/materialize/0.100.1/js/materialize.min.js"></script>
            {% endif %}
            <script src="{{ asset('js/autobahn.min.js') }}"></script>
            <script src="{{ asset('build/js/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
